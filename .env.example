# API Keys - Replace with your actual keys in .env file (do not commit .env to git)
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
TITLE=Voice Input
CONFIRM_DELETE=false
PORT=5001
FLASK_DEBUG=false
FLASK_ENV=production
HOST=0.0.0.0
LOG_LEVEL=INFO

# Cost Settings
COST_PER_MINUTE=0.006

# Storage Configuration
UPLOAD_FOLDER=recordings

# AWS Fargate Specific Settings
# ALLOW_MISSING_API_KEY=false  # Set to true only for development/testing without API key

# Container Health Check
# HEALTH_CHECK_PATH=/  # Default health check path
# HEALTH_CHECK_INTERVAL=30  # Interval in seconds

# AWS Integration
# AWS_REGION=us-east-1  # Your AWS region
# AWS_LOG_GROUP=/ecs/voice-app  # CloudWatch log group

# These would typically be set by AWS ECS/Fargate
# ECS_CONTAINER_METADATA_URI=  # Container metadata endpoint
# ECS_CONTAINER_METADATA_URI_V4=  # Container metadata endpoint v4
